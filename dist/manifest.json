{
  "manifest_version": 3,
  "name": "IP Graph Extension",
  "version": "1.0.0",
  "description": "Visualize IP relationships and ownership on Story Protocol",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "https://aeneid.storyrpc.io/*",
    "https://aeneid.storyscan.io/*",
    "https://api.story.foundation/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "IP Graph Visualizer"
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "web_accessible_resources": [
  {
    "resources": ["assets/icons/icon24.png"],
    "matches": ["<all_urls>"]
  }
]
}